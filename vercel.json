{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/test-openai",
      "dest": "/server.js"
    },
    {
      "src": "/upload-json",
      "dest": "/server.js"
    },
    {
      "src": "/api/chat",
      "dest": "/server.js"
    },
    {
      "src": "/check-file-uploaded",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1",
      "continue": true
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
